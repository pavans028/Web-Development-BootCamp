<% include ../partials/header%>
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">YelpCamp</p>
            <div class="list-group">
                <li class="list-group-item"> Dummy text 1</li>
                <li class="list-group-item active"> Dummy text 2</li>
                <li class="list-group-item"> Dummy text 3</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                <img class="img-responsive" src="<%=campground.imageURL%>">
                <div class="caption-full">
                    <h4 class="pull-right">$15/Night</h4>
                    <h3><a><%=campground.name%></a></h3>
                    <p><%=campground.description%></p>
                </div>
            </div>
            <div class="well">
                <div class="text-right">
                    <a class="btn btn-success" href="/campgrounds/<%=campground._id%>/comments/new">
                        Add a new comment  
                    </a>
                </div>
                <%campground.comments.forEach(function(comment){%>
                     <div class="row">
                        <div class="col-md-12">
                           <strong><%=comment.author%></strong>
                           <span class="pull-right">10 days ago</span>
                           <p><%=comment.text%></p>
                        </div>
                    </div>
                <%});%>
            </div>
        </div>
    </div>
</div>


<% include ../partials/footer%>